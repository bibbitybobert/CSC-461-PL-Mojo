from python import Python

def main():
    var selection: String = ""
    
    while(selection != "0"):
        printMenu()

        # input example
        selection = Python.evaluate("input('Selection: ')").to_string()
        print()

        # branching example
        if selection == "1":
            helloWorld()
        elif selection == "2":
            sayHello()
        elif selection == "3":
            printSpacedName()
        elif selection != "0":
            print("Invalid selection")

    

def printMenu() -> None:

    # output example
    print("\n0: Exit")
    print("1: Hello World")
    print("2: Hello <name>")
    print("3: Print Name Letter-By-Letter")

def helloWorld() -> None:
    print("Hello World!")

def sayHello() -> None:
    let name: String = Python.evaluate("input('Enter your name: ')").to_string()
    print("\nHello " + name)

def printSpacedName() -> None:
    let name: String = Python.evaluate("input('Enter your name: ')").to_string()
    print()

    # iteration example
    for i in range(len(name)):
        print(name[i])